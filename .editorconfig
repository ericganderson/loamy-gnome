# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{css,scss}]
quote_type = single

[*.html]
max_line_length = 120

[*.{json,yaml,yml}]
max_line_length = off

[*.ts]
quote_type = single
